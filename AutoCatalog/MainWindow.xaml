<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCatalog"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="AutoCatalog.MainWindow"
        mc:Ignorable="d"
        Title="AutoCatalog" Height="700" Width="800">
    
    <Grid ShowGridLines="True" Margin="10,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Добавить" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Click="addInCatalog"/>
        <ListBox Grid.Column="1" x:Name="catalogList">
        </ListBox>

        <StackPanel x:Name="catalogAddingPanel" Grid.Column="1" Visibility="Hidden">

            <TextBlock Text="Название"/>
            <TextBox x:Name="nameTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Поколение"/>
            <TextBox x:Name="generationTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Производитель"/>
            <ComboBox x:Name="manufacturesComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>



            <TextBlock Text="Год"/>
            <TextBox x:Name="yearTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            
            <TextBlock Text="Комлектация"/>
            <ComboBox x:Name="configurationComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left">
                <Button x:Name="createConfig" Content="Создать" Click="createConfiguration"></Button>
            </ComboBox>

            <TextBlock Text="Кузов"/>
            <ComboBox x:Name="bodiesComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            
            <TextBlock Text="Класс"/>
            <TextBox x:Name="categoryTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>



            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButton" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButton_Click"/>
                <Button x:Name ="addButton" Content="Добавить" Click="addButton_Click" />
            </StackPanel>
        </StackPanel>



        <StackPanel x:Name="manufacturesAddingPanel" Grid.Column="1" Visibility="Hidden">

            <TextBlock Text="Название"/>
            <TextBox x:Name="nameManufactureTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Год"/>
            <TextBox x:Name="yearOfFoundationTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Страна"/>
            <TextBox x:Name="countryTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

         
            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonManufacture" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonManufacture_Click"/>
                <Button x:Name ="manufactureAddButton" Content="Добавить" Click="addButtonManufacture_Click" />
            </StackPanel>
        </StackPanel>


        <StackPanel x:Name="bodiesAddingPanel" Grid.Column="1" Visibility="Hidden">

            <TextBlock Text="Название"/>
            <TextBox x:Name="nameBodyTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Количество дверей"/>
            <TextBox x:Name="countOfDoorsBodyTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonBody" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonBody_Click"/>
                <Button x:Name ="addButtonBody" Content="Добавить" Click="addButtonBody_Click" />
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="configurationCreatingPanel" Grid.Column="1" Visibility="Visible">

            <TextBlock Text="Название"/>
            <TextBox x:Name="nameConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Двигатель"/>
            <ComboBox x:Name="engineComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left">
                <Button x:Name="createEngineButton" Content="Создать" Click="createEngine"></Button>
            </ComboBox>

            <TextBlock Text="Коробка передач"/>
            <ComboBox x:Name="transmissionComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left">
                <Button x:Name="createTransmissionButton" Content="Создать" Click="createTransmission"></Button>
            </ComboBox>

            <TextBlock Text="Подвеска и тормоза"/>
            <ComboBox x:Name="suspensionAndBrakesComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left">
                <Button x:Name="createSuspensionAndBrakesButton" Content="Создать" Click="createSuspensionAndBrakes"></Button>
            </ComboBox>
            
            <TextBlock Text="Тип привода"/>
            <ComboBox x:Name="typeOfDriveConfigComboBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left">
                <ComboBoxItem Content="Полный"/>
                <ComboBoxItem Content="Передний"/>
                <ComboBoxItem Content="Задний"/>
            </ComboBox>

            <TextBlock Text="Разгон до 100 км/ч"/>
            <TextBox x:Name="overclockingConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            
            <TextBlock Text="Дорожный просвет"/>
            <TextBox x:Name="clearanceConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Снаряженная масса"/>
            <TextBox x:Name="curbWeightConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Полная масса"/>
            <TextBox x:Name="fullWeightConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Объем топливного бака"/>
            <TextBox x:Name="fuelTankVolumeConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Количество мест"/>
            <TextBox x:Name="numberOfSeatsConfigTextBox" BorderThickness="1" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonConfig" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonConfig_Click"/>
                <Button x:Name ="addButtonConfig" Content="Сохранить" Click="createButtonConfig_Click" />
            </StackPanel>
        </StackPanel>

        
        
        <StackPanel x:Name="engineCreatingPanel" Grid.Column="1" Visibility="Hidden">
            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonEngine" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonEngine_Click"/>
                <Button x:Name ="addButtonEngine" Content="Сохранить" Click="createButtonEngine_Click" />
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="transmissionCreatingPanel" Grid.Column="1" Visibility="Hidden">
            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonTransmission" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonTransmission_Click"/>
                <Button x:Name ="addButtonTransmission" Content="Сохранить" Click="createButtonTransmission_Click" />
            </StackPanel>
        </StackPanel>


        <StackPanel x:Name="suspensionAndBrakesCreatingPanel" Grid.Column="1" Visibility="Hidden">
            <StackPanel Orientation="Horizontal">
                <Button x:Name ="cancelButtonSuspensionAndBrakes" Content="Отмена" Margin="10,0,10,0" Background="DarkRed" Click="cancelButtonSuspensionAndBrakes_Click"/>
                <Button x:Name ="addButtonSuspensionAndBrakes" Content="Сохранить" Click="createButtonSuspensionAndBrakes_Click" />
            </StackPanel>
        </StackPanel>



    </Grid>


</Window>
